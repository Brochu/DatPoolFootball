@page
@model PoolFootballApp.Pages.Teams.CreateModel
@using PoolFootballApp.Models

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label"></label>
                <input asp-for="Team.Name" class="form-control" />
                <span asp-validation-for="Team.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.City" class="control-label"></label>
                <input asp-for="Team.City" class="form-control" />
                <span asp-validation-for="Team.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.Conf" class="control-label"></label>
                <select asp-for="Team.Conf" class="form-control" asp-items="@Html.GetEnumSelectList<Conference>()"></select>
                <span asp-validation-for="Team.Conf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.Div" class="control-label"></label>
                <select asp-for="Team.Div" class="form-control" asp-items="@Html.GetEnumSelectList<Division>()"></select>
                <span asp-validation-for="Team.Div" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
